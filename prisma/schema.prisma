generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Empleado {
  id         Int       @id @default(autoincrement())
  nombre     String
  contrasena String
  rol        String
  clientes   Cliente[]
}

model Cliente {
  id          Int          @id @default(autoincrement())
  cuenta      String
  nombre      String
  domicilio   String
  saldo       Float
  telefono    String
  empleadoId  Int
  empleado    Empleado     @relation(fields: [empleadoId], references: [id])
  seguimiento Seguimiento?
}

model Seguimiento {
  id          Int      @id @default(autoincrement())
  clienteId   Int      @unique
  cliente     Cliente  @relation(fields: [clienteId], references: [id])
  respuesta   Boolean
  observacion String?
  fecha       DateTime @default(now())
}
